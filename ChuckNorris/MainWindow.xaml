<Window x:Class="ChuckNorris.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChuckNorris"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Orientation="Vertical">
        <Image Name="imageInfo" Width="50" Height="50" Margin="0,20"/>
        <TextBlock Width="400" Height="50" Margin="0,20" Text="Один случайный факт из жизни Чака Норриса:" FontSize="18" HorizontalAlignment="Center"/>
        <TextBlock Name="valueInfo" Width="700" Height="100" Margin="0,0" Text="" FontSize="14" HorizontalAlignment="Center" Foreground="#FF1029E0"/>
        <Button Name="btnOk" Width="250" Height="30" Margin="0,30" Content="Загрузить новый факт" FontSize="16" Click="btnOk_Click"/>
    </StackPanel>
</Window>
